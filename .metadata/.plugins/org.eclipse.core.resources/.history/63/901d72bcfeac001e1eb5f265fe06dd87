    private void ConnexionBtnActionPerformed(java.awt.event.ActionEvent evt) throws SQLException {                                             
        if(PasswordLogin.getText().equals("Password")){
            new Bibliothecaires().setVisible(true);
            this.dispose();
        }
    }                                            

